{
  "compilerOptions": {
    "target": "ES2023",                  // Соответствует последним версиям JS
    "module": "ESNext",                  // Использование ECMAScript модулей
    "moduleResolution": "node",          // Использование резолюции модулей Node.js
    "esModuleInterop": true,             // Совместимость с CommonJS
    "forceConsistentCasingInFileNames": true, // Убедитесь в согласованности регистра
    "strict": true,                      // Включение строгого режима
    "skipLibCheck": true,                // Пропустить проверку типов библиотек
    "baseUrl": ".",                      // Базовая директория для разрешения путей
    "paths": {
      "@src/*": ["src/*"]                // Настройка алиасов
    },
    "noEmit": true,
    "outDir": "./dist",                  // Директория для компиляции
    "allowSyntheticDefaultImports": true // Позволяет импортировать модули с помощью синтаксиса default import
  },
  "include": ["src/**/*.ts"],               // Указывает, какие файлы будут включены
  "exclude": ["node_modules"]            // Исключает node_modules из компиляции
}
